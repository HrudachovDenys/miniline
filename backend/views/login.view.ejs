<% layout('./layouts/main.layout') -%>
<% block('title', 'Login') -%>

<h2><%-message %></h2>
<form action="/auth/login", method="POST">
    <div>
        <label>Username</label>
        <input type="text" name="username" required/>
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" required/>
    </div>
    <div>
        <input type="submit" />
    </div>
</form>